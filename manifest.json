{
  "manifest_version": 3,
  "name": "TrueLens Extension",
  "version": "1.0.0",
  "description": "Detect Fake News and Deepfakes",
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://truelens-fact-check-api.onrender.com/*",
    "https://*.gradio.live/*",
    "https://huggingface.co/*",
    "*://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.js"]
    }
  ]
}
